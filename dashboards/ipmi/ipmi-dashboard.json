{
  "title": "IPMI Hardware Monitoring",
  "description": "Hardware metrics from prometheus-ipmi-exporter",
  "tags": [
    "ipmi",
    "hardware",
    "monitoring"
  ],
  "style": "",
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 0,
  "fiscalYearStartMonth": 0,
  "refresh": "1m",
  "schemaVersion": 36,
  "panels": [
    {
      "type": "stat",
      "targets": [
        {
          "expr": "ipmi_bmc_info{instance=~\"$instance\"}",
          "legendFormat": "{{firmware_revision}}",
          "refId": ""
        }
      ],
      "title": "BMC Firmware",
      "transparent": false,
      "datasource": {
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 1
      },
      "transformations": [],
      "options": null,
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      }
    },
    {
      "type": "stat",
      "targets": [
        {
          "expr": "ipmi_chassis_power_state{instance=~\"$instance\"}",
          "refId": ""
        }
      ],
      "title": "Power State",
      "transparent": false,
      "datasource": {
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 1
      },
      "transformations": [],
      "options": null,
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "OFF",
                  "color": "red"
                },
                "1": {
                  "text": "ON",
                  "color": "green"
                }
              }
            }
          ]
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "targets": [
        {
          "expr": "ipmi_temperature_celsius{instance=~\"$instance\"}",
          "legendFormat": "{{name}}",
          "refId": ""
        }
      ],
      "title": "Temperatures",
      "transparent": false,
      "datasource": {
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 6
      },
      "transformations": [],
      "options": null,
      "fieldConfig": {
        "defaults": {
          "unit": "celsius"
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "targets": [
        {
          "expr": "ipmi_fan_speed_rpm{instance=~\"$instance\"}",
          "legendFormat": "{{name}}",
          "refId": ""
        }
      ],
      "title": "Fan Speeds (RPM)",
      "transparent": false,
      "datasource": {
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 14
      },
      "transformations": [],
      "options": null,
      "fieldConfig": {
        "defaults": {
          "unit": "rpm"
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "targets": [
        {
          "expr": "ipmi_fan_speed_ratio{instance=~\"$instance\"}",
          "legendFormat": "{{name}}",
          "refId": ""
        }
      ],
      "title": "Fan Speed Ratio",
      "transparent": false,
      "datasource": {
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 14
      },
      "transformations": [],
      "options": null,
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "targets": [
        {
          "expr": "ipmi_voltage_volts{instance=~\"$instance\"}",
          "legendFormat": "{{name}}",
          "refId": ""
        }
      ],
      "title": "Voltage",
      "transparent": false,
      "datasource": {
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 22
      },
      "transformations": [],
      "options": null,
      "fieldConfig": {
        "defaults": {
          "unit": "volt"
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "targets": [
        {
          "expr": "ipmi_dcmi_power_consumption_watts{instance=~\"$instance\"}",
          "legendFormat": "Current",
          "refId": ""
        }
      ],
      "title": "Power Consumption (DCMI)",
      "transparent": false,
      "datasource": {
        "uid": "${datasource}"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 22
      },
      "transformations": [],
      "options": null,
      "fieldConfig": {
        "defaults": {
          "unit": "watt"
        },
        "overrides": []
      }
    }
  ],
  "templating": {
    "list": [
      {
        "id": "00000000-0000-0000-0000-000000000000",
        "type": "datasource",
        "name": "datasource",
        "label": "Datasource",
        "hide": 0,
        "skipUrlSync": false,
        "query": "prometheus",
        "multi": false,
        "includeAll": false,
        "auto": false,
        "auto_min": "10s",
        "auto_count": 30
      },
      {
        "id": "00000000-0000-0000-0000-000000000000",
        "type": "query",
        "name": "instance",
        "label": "Instance",
        "hide": 0,
        "skipUrlSync": false,
        "query": "label_values(ipmi_bmc_info, instance)",
        "datasource": {
          "uid": "${datasource}"
        },
        "multi": true,
        "refresh": 1,
        "includeAll": true,
        "auto": false,
        "auto_min": "10s",
        "auto_count": 30
      }
    ]
  },
  "annotations": {}
}