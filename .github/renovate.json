{
    "extends": [
        ":pinVersions",
        ":pinDependencies",
        ":semanticCommits"
    ],
    "hostRules": [
        {
            "matchHost": "ghcr.io",
            "hostType": "docker"
        }
    ],
    "major": {
        "minimumReleaseAge": "5 days",
        "labels": [
            "major"
        ]
    },
    "minor": {
        "minimumReleaseAge": "3 days",
        "labels": [
            "minor"
        ]
    },
    "dependencyDashboard": true,
    "timezone": "Asia/Tbilisi",
    "argocd": {
        "fileMatch": [
            "argocd/.+\\.yaml$"
        ],
        "labels": [
            "argocd"
        ]
    },
    "github-actions": {
        "fileMatch": [
            "^\\.github/workflows/[^/]+\\.ya?ml$"
        ],
        "labels": [
            "github-actions"
        ]
    },
    "kubernetes": {
        "fileMatch": [
            "\\.yaml$"
        ]
    },
    "automerge": true,
    "prHourlyLimit": 5,
    "prConcurrentLimit": 10
}