{
    "extends": [
        ":pinDependencies"
    ],
    "major": {
        "stabilityDays": 3
    },
    "schedule": [
        "before 2am"
    ],
    "dependencyDashboard": true,
    "timezone": "Europe/Moscow",
    "helmfile": {
        "fileMatch": "(^|/)helmfile.d\/.*\\.yaml$"
    },
    "argocd": {
        "fileMatch": [
            "argocd/.+\\.yaml$"
        ]
    },
    "github-actions": {
        "fileMatch": [
            "^\\.github/workflows/[^/]+\\.ya?ml$"
        ],
        "matchStrings": [
            "uses: (?<depName>[\\w-]+/[\\w-]+)(?<currentDigest>@sha256:[a-f0-9]{64})?"
        ]
    },
    "automerge": true
}