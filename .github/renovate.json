{
    "extends": [
        ":pinVersions",
        ":pinDependencies",
        ":semanticCommits"
    ],
    "major": {
        "minimumReleaseAge": "5 days",
        "labels": [
            "major"
        ]
    },
    "minor": {
        "minimumReleaseAge": "3 days",
        "labels": [
            "minor"
        ]
    },
    "dependencyDashboard": true,
    "timezone": "Asia/Tbilisi",
    "argocd": {
        "managerFilePatterns": [
            "/argocd/.+\\.yaml$/"
        ],
        "labels": [
            "argocd"
        ]
    },
    "github-actions": {
        "managerFilePatterns": [
            "/^\\.github/workflows/[^/]+\\.ya?ml$/"
        ],
        "labels": [
            "github-actions"
        ]
    },
    "kubernetes": {
        "managerFilePatterns": [
            "/\\.yaml$/"
        ]
    },
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/ansible/requirements\\.yaml$/"
            ],
            "matchStrings": [
                "name:\\s*(?<depName>https://github\\.com/[^\\s]+?\\.git)\\s*type:\\s*git\\s*version:\\s*(?<currentDigest>[a-f0-9]+)"
            ],
            "datasourceTemplate": "git-refs",
            "versioningTemplate": "git",
            "currentValueTemplate": "main"
        },
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/argocd/.+\\.yaml$/"
            ],
            "matchStrings": [
                "#\\s*renovate:\\s*datasource=(?<datasource>[^\\s]+)\\s+depName=(?<depName>[^\\s]+)(?:\\s+versioning=(?<versioning>[^\\s]+))?\\n\\s*tag:\\s*\"?(?<currentValue>[^\"\\s]+)\"?"
            ]
        }
    ],
    "automerge": true,
    "prHourlyLimit": 5,
    "prConcurrentLimit": 10
}
