{
    "extends": [
        ":pinVersions",
        ":pinDependencies",
        ":semanticCommits"
    ],
    "major": {
        "minimumReleaseAge": "5 days",
        "labels": [
            "major"
        ]
    },
    "minor": {
        "minimumReleaseAge": "3 days",
        "labels": [
            "minor"
        ]
    },
    "dependencyDashboard": true,
    "timezone": "Asia/Tbilisi",
    "argocd": {
        "fileMatch": [
            "argocd/.+\\.yaml$"
        ],
        "labels": [
            "argocd"
        ]
    },
    "github-actions": {
        "fileMatch": [
            "^\\.github/workflows/[^/]+\\.ya?ml$"
        ],
        "labels": [
            "github-actions"
        ]
    },
    "kubernetes": {
        "fileMatch": [
            "\\.yaml$"
        ]
    },
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "ansible/requirements\\.yaml$"
            ],
            "matchStrings": [
                "name:\\s*(?<depName>https://github\\.com/[^\\s]+?\\.git)\\s*type:\\s*git\\s*version:\\s*(?<currentDigest>[a-f0-9]+)"
            ],
            "datasourceTemplate": "git-refs",
            "versioningTemplate": "git",
            "currentValueTemplate": "main"
        }
    ],
    "automerge": true,
    "prHourlyLimit": 5,
    "prConcurrentLimit": 10
}