{
    "extends": [
        ":pinVersions",
        ":pinDependencies",
        ":semanticCommits"
    ],
    "major": {
        "minimumReleaseAge": "5 days",
        "labels": [
            "major"
        ]
    },
    "minor": {
        "minimumReleaseAge": "3 days",
        "labels": [
            "minor"
        ]
    },
    "dependencyDashboard": true,
    "timezone": "Asia/Tbilisi",
    "argocd": {
        "fileMatch": [
            "argocd/.+\\.yaml$"
        ],
        "labels": [
            "argocd"
        ]
    },
    "github-actions": {
        "fileMatch": [
            "^\\.github/workflows/[^/]+\\.ya?ml$"
        ],
        "labels": [
            "github-actions"
        ]
    },
    "kubernetes": {
        "fileMatch": [
            "\\.yaml$"
        ]
    },
    "docker": {
        "enabled": true,
        "fileMatch": [
            "manifests/.+\\.ya?ml$",
            "manifests/.+\\.yaml$"
        ]
    },
    "regexManagers": [
        {
            "fileMatch": [
                "manifests/.+\\.ya?ml$",
                "manifests/.+\\.yaml$"
            ],
            "matchStrings": [
                "image: (?<depName>[^:]+):(?<currentValue>[0-9.]+)"
            ],
            "datasourceTemplate": "docker"
        }
    ],
    "automerge": true,
    "prHourlyLimit": 5,
    "prConcurrentLimit": 10
}