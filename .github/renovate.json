{
    "extends": [
        ":pinVersions",
        ":pinDependencies"
    ],
    "major": {
        "stabilityDays": 3
    },
    "schedule": [
        "before 2am"
    ],
    "dependencyDashboard": true,
    "timezone": "Asia/Tbilisi",
    "helmfile": {
        "fileMatch": "(^|/)helmfile.d\/.*\\.yaml$"
    },
    "argocd": {
        "fileMatch": [
            "argocd/.+\\.yaml$"
        ]
    },
    "github-actions": {
        "fileMatch": [
            "^\\.github/workflows/[^/]+\\.ya?ml$"
        ]
    },
    "automerge": true
}